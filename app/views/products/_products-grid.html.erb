<%# app/views/products/_products-grid.html.erb %>

<section class="col-span-3 grid gap-2 md:grid-cols-3 grid-cols-1" data-controller="scroll-reveal">

    <% if products.empty? %>

      <p class="text-center text-lg my-4">
        Il n'y a actuellement aucun produit
      </p>

    <% else %>

      <% products.each_with_index do |product, index| %>
        <%= render 'products/product-card', product: product, index: index %>
      <% end %>

    <% end %>

</section>

