<h1 class="text-center text-2xl font-bold my-4">
  Tous les produits
</h1>

<main class="grid grid-cols-4">
  <% @products.each do |product| %>
    <div class="h-16 w-16">
       <%= cl_image_tag product.photos.first.key, class: "rounded-lg" %>
    </div>
    <div>
      <p>
        <%= product.name %>
      </p>
    </div>


    <div>
      <p>
        <%= number_to_currency(product.price, unit: "â‚¬", precision: 2, separator: ".", delimiter: " ", format: "%n %u") %>
      </p>
    </div>

    <div>
      <%= link_to 'Voir', product_path(product), class: "bg-blue-800 px-4 py-2 text-center rounded-sm hover:bg-blue-600 transition hover:duration-150" %>
    </div>
  <% end %>
</main>
